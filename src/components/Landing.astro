---  
import { Image } from "astro:assets";
import hero from '../assets/landing-hero.svg';  
---  
  
<section class="hero py-12 lg:py-20">  
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex flex-col-reverse lg:flex-row lg:justify-between items-center gap-12">  
      <!-- Text -->  
      <div class="lg:w-1/2 flex flex-col justify-center text-center lg:text-left lg:pr-6">  
        <h1 class="text-4xl md:text-5xl xl:text-6xl font-bold leading-tight">
          Matt Nolan
        </h1>
        <h2 class="mt-4 text-xl md:text-2xl xl:text-3xl font-semibold text-secondary">  
          Robotics Engineer & Maker  
        </h2>  
        <p class="mt-6 text-base md:text-lg xl:text-xl max-w-[700px] mx-auto lg:mx-0 leading-relaxed">
          Building innovative solutions that bridge cutting-edge technology and practical applications. Explore my projects, insights, and journey through robotics and engineering.
        </p>
        <div class="mt-8 flex flex-wrap gap-4 justify-center lg:justify-start">  
          <a href="/projects" class="btn btn-primary btn-lg px-8">View Projects</a>  
          <a href="/posts" class="btn btn-outline btn-lg px-8">Read Posts</a>  
        </div>  
      </div>  
    
      <!-- Image -->  
      <div class="lg:w-1/2 lg:pl-6">  
        <Image src={hero} alt="Robotics and engineering illustration" class="rounded-xl shadow-lg w-full h-auto object-cover" />  
      </div>  
    </div>
  </div>
</section>